modules = ["nodejs-20", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MCP Server"

[[workflows.workflow]]
name = "MCP Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx tsx src/server.ts"
waitForPort = 5000

[deployment]
deploymentTarget = "cloudrun"
run = ["sh", "-c", "npx tsx src/server.ts"]

[[ports]]
localPort = 5000
externalPort = 80
